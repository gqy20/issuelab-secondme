generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  secondmeUserId String          @unique @map("secondme_user_id")
  accessToken    String          @map("access_token")
  refreshToken   String          @map("refresh_token")
  tokenExpiresAt DateTime        @map("token_expires_at")
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")
  profile        ProfileSnapshot?
  chatSessions   ChatSession[]
  notes          UserNote[]
  tasks          Task[]

  @@map("users")
}

model ProfileSnapshot {
  id         String   @id @default(cuid())
  userId     String   @unique @map("user_id")
  nickname   String?
  avatar     String?
  shadesJson String?  @map("shades_json")
  updatedAt  DateTime @updatedAt @map("updated_at")
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profile_snapshots")
}

model ChatSession {
  id          String        @id @default(cuid())
  userId      String        @map("user_id")
  title       String        @default("新建讨论")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  chatMessage ChatMessage[]

  @@map("chat_sessions")
}

model ChatMessage {
  id        String      @id @default(cuid())
  sessionId String      @map("session_id")
  role      MessageRole
  content   String
  createdAt DateTime    @default(now()) @map("created_at")
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}

model UserNote {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_notes")
}

model Task {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  title     String
  input     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  runs      Run[]

  @@map("tasks")
}

model Run {
  id        String    @id @default(cuid())
  taskId    String    @map("task_id")
  status    RunStatus @default(pending)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  task      Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
  pathRuns  PathRun[]
  artifact  Artifact?
  eval      Evaluation?

  @@map("runs")
}

model PathRun {
  id        String   @id @default(cuid())
  runId     String   @map("run_id")
  path      PathType
  status    String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  run       Run      @relation(fields: [runId], references: [id], onDelete: Cascade)
  turns     Turn[]
  report    PathReport?

  @@unique([runId, path])
  @@map("path_runs")
}

model Turn {
  id         String   @id @default(cuid())
  pathRunId  String   @map("path_run_id")
  round      Int
  role       String
  content    String
  jsonOutput String?  @map("json_output")
  createdAt  DateTime @default(now()) @map("created_at")
  pathRun    PathRun  @relation(fields: [pathRunId], references: [id], onDelete: Cascade)

  @@map("turns")
}

model PathReport {
  id        String   @id @default(cuid())
  pathRunId String   @unique @map("path_run_id")
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  pathRun   PathRun  @relation(fields: [pathRunId], references: [id], onDelete: Cascade)

  @@map("path_reports")
}

model Artifact {
  id        String   @id @default(cuid())
  runId     String   @unique @map("run_id")
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  run       Run      @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@map("artifacts")
}

model Evaluation {
  id        String   @id @default(cuid())
  runId     String   @unique @map("run_id")
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  run       Run      @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@map("evaluations")
}

enum MessageRole {
  user
  assistant
}

enum RunStatus {
  pending
  running
  done
  failed
}

enum PathType {
  radical
  conservative
  cross_domain
}
